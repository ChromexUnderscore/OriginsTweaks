{
    "type": "origins:multiple",
    "name": "Master of Webs",
    "description": "You navigate cobweb perfectly, and are able to climb in them. When you hit an enemy, they get stuck in cobweb for a while. You are able to shoot webs onto surfaces which launches you forwards. Non-arthropods stuck in cobweb will be sensed by you. You are able to craft cobweb from string.",
    "loading_priority": 1,
    "badges": [
        {
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": "You have a String Supply that holds 6 Notches of String. You regenerate 1 Notch per 10 Seconds"
        },
        {
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Upon hitting an Entity, you will web them into a Cobweb. This Ability consumes 1 Notch of your String Supply."
        },
        {
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "By Pressing your Primary Ability Key, you are able to shoot a web that launches you forwards. This Ability consumes 2 Notches of your String Supply."
        }
    ],
    "webbing": {
        "type": "origins:target_action_on_hit",
        "cooldown": 120,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:block_action_at",
                    "block_action": {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:replacable"
                        },
                        "if_action": {
                            "type": "origins:set_block",
                            "block": "origins:temporary_cobweb"
                        }
                    }
                },
                {
                  "type": "origins:change_resource",
                  "resource": "*:*_string_resource",
                  "change": -10,
                  "operation": "add"
                }
            ]
        },
        "condition": {
          "type": "origins:resource",
          "resource": "*:*_string_resource",
          "comparison": ">",
          "compare_to": 10
        }
    },
    "web_shoot": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:raycast",
            "distance": 32,
            "block": true,
            "entity": false,
            "shape_type": "outline",
            "fluid_handling": "none",
            "hit_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:add_velocity",
                        "z": 1.5,
                        "space": "local",
                        "set":true
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_string_resource",
                        "change": 1
                    }
                ]
            },
            "command_at_hit": "particle minecraft:block_marker minecraft:cobweb ~ ~ ~ 0 0 0 0.0 1 normal @a",
            "command_along_ray": "particle minecraft:dust 0 0 0 1 ~ ~ ~ 0 0 0 0 1",
            "command_step": 0.1,
            "command_along_ray_only_on_hit": true
        },
        "condition":{
            "type": "origins:resource",
            "resource": "*:*_string_resource",
            "comparison": "==",
            "compare_to": 20
        },
        "cooldown": 20,
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        }
    },
    "no_slowdown": {
        "type": "origins:simple"
    },
    "climbing": {
        "type": "origins:climbing",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:in_block_anywhere",
                    "block_condition": {
                        "type": "origins:in_tag",
                        "tag": "origins:cobwebs"
                    }
                },
                {
                    "type": "origins:power_active",
                    "power": "origins:climbing_toggle"
                }
            ]
        },
        "hold_condition": {
            "type": "origins:power_active",
            "power": "*:*_climbing"
        }
    },
    "punch_through": {
        "type": "origins:prevent_block_selection",
        "block_condition": {
            "type": "origins:in_tag",
            "tag": "origins:cobwebs"
        },
        "condition": {
            "type": "origins:sneaking",
            "inverted": true
        }
    },
    "sense": {
        "type": "origins:entity_glow",
        "entity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:in_block_anywhere",
                    "block_condition": {
                        "type": "origins:in_tag",
                        "tag": "origins:cobwebs"
                    }
                },
                {
                    "type": "origins:entity_group",
                    "group": "arthropod",
                    "inverted": true
                }
            ]
        }
    },
    "web_crafting": {
        "type": "origins:recipe",
        "recipe": {
            "id": "origins:master_of_webs/web_crafting",
            "type": "minecraft:crafting_shapeless",
            "ingredients": [
                {
                    "item": "minecraft:string"
                },
                {
                    "item": "minecraft:string"
                },
                {
                    "item": "minecraft:string"
                },
                {
                    "item": "minecraft:string"
                },
                {
                    "item": "minecraft:string"
                },
                {
                    "item": "minecraft:string"
                }
            ],
            "result": {
                "item": "minecraft:cobweb"
            }
        }
    },
    "string_resource": {
      "type": "origins:resource",
      "min": 0,
      "max": 60,
      "start_value": 60,
      "hud_render": {
        "sprite_location": "origins:textures/gui/resource_bar.png",
        "bar_index": 5
      }
  },
    "string_regenerate": {
      "type": "origins:action_over_time",
      "entity_action": {
        "type": "origins:change_resource",
        "resource": "*:*_string_resource",
        "change": 1,
        "operation": "add"
      },
      "interval": 20,
      "condition": {
        "type": "origins:climbing",
        "inverted": true
      },
      "string_refill":{
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions":[
                {
                    "type": "origins:equipped_item_action",
                    "equipment_slot": "mainhand",
                    "action": {
                        "type": "origins:consume",
                        "amount": 1
                    },
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:string"
                        }
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_string_resource",
                    "change": 10,
                    "operation": "add",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:string"
                        }
                    }
                }
            ]
        },
        "cooldown": 20,
        "hud_render": {
            "should_render": false
        }
    }
  }
}
{
    "type": "origins:multiple",
    "hidden": true,
    "hurt_death": {
        "type": "origins:self_action_when_hit",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:health",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "function originstweaks:shulk_sound_hurt",
                "permission_level": 4
            },
            "else_action": {
                "type": "origins:execute_command",
                "command": "function originstweaks:shulk_sound_death",
                "permission_level": 4
            }
        },
        "cooldown": 1
    },
    "spawn": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:sneaking",
                        "inverted": true
                    },
                    {
                        "type": "origins:gamemode",
                        "gamemode": "spectator",
                        "inverted": true
                    },
                    {
                        "type": "origins:status_effect",
                        "effect": "minecraft:invisibility",
                        "inverted": true
                    },
                    {
                        "type": "origins:origin",
                        "origin": "origins-classes:rogue",
                        "layer": "origins-classes:class",
                        "inverted": true
                    }
                ]
            },
            "if_action": {
                "type": "origins:delay",
                "ticks": 5,
                "action": {
                    "type": "origins:execute_command",
                    "command": "function originstweaks:shulk_sound_idle"
                }
            }
        }
    },
    "idle": {
        "type": "origins:action_over_time",
        "interval": 100,
        "entity_action": {
            "type": "origins:chance",
            "action": {
                "type": "origins:if_else_list",
                "actions": [
                    {
                        "condition": {
                            "type": "origins:health",
                            "comparison": ">",
                            "compare_to": 4
                        },
                        "action": {
                            "type": "origins:execute_command",
                            "command": "function originstweaks:shulk_sound_idle"
                        }
                    },
                    {
                        "condition": {
                            "type": "origins:health",
                            "comparison": "<=",
                            "compare_to": 4
                        },
                        "action": {
                            "type": "origins:execute_command",
                            "command": "function originstweaks:shulk_sound_retreat"
                        }
                    }
                ]
            },
            "chance": 0.05
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sneaking",
                    "inverted": true
                },
                {
                    "type": "origins:gamemode",
                    "gamemode": "spectator",
                    "inverted": true
                },
                {
                    "type": "origins:status_effect",
                    "effect": "minecraft:invisibility",
                    "inverted": true
                },
                {
                    "type": "origins:origin",
                    "origin": "origins-classes:rogue",
                    "layer": "origins-classes:class",
                    "inverted": true
                }
            ]
        }
    }
}
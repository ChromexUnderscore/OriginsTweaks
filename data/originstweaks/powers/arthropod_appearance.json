{
    "type": "origins:multiple",
    "name": "Arthopod Appearance",
    "description": "Your body resembles that of Arthopods, making you shorter and able to feather off your fall.",
    "badges": [
        {
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "You are 1.5 Blocks tall."
        },
        {
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": "You take 50% less fall damage, and only after a fall of more than 30 Blocks."
        }
    ],
    "scale": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:delay",
            "ticks": 1,
            "action": {
                "type": "origins:execute_command",
                "command": "function originstweaks:arachnid_scale"
            }
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "scale reset @s"
        }
    },
    "fall_dmg_cancel": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:name",
                    "name": "fall"
                },
                {
                    "type": "origins:amount",
                    "comparison": "<=",
                    "compare_to": 30
                }
            ]
        },
        "modifier": {
            "operation": "multiply_total",
            "value": -1
        }
    },
    "fall_dmg_reduce": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:name",
                    "name": "fall"
                },
                {
                    "type": "origins:amount",
                    "comparison": ">",
                    "compare_to": 30
                }
            ]
        },
        "modifier": {
            "operation": "addition",
            "value": -30
        }
    }
}
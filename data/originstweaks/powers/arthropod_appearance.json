{
    "type": "origins:multiple",
    "name": "Arthopod Appearance",
    "description": "Your body resembles that of Arthopods, making you shorter and able to feather off your fall.",
    "badges": [
        {
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "You are 1.5 Blocks tall."
        },
        {
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": "You take 50% less fall damage, and only after a fall of more than 30 Blocks."
        }
    ],
    "scale": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:delay",
            "ticks": 1,
            "action": {
                "type": "origins:execute_command",
                "command": "function originstweaks:arachnid_scale"
            }
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "scale reset @s"
        }
    },
    "no_fall_damage": {
        "type": "origins:modify_falling",
        "take_fall_damage": false,
        "condition": {
            "type": "origins:fall_distance",
            "comparison": ">=",
            "compare_to": 30,
            "inverted": true
        }
    },
    "fall_distance_reset": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:set_fall_distance",
                    "fall_distance": 0
                },
                {
                    "type": "origins:change_resource",
                    "resource": "originstweaks:arthropod_appearance_on_ground_resource",
                    "change": -1,
                    "operation": "add"
                }
            ]
        },
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:fall_distance",
                    "comparison": ">",
                    "compare_to": 30
                },
                {
                    "type": "origins:resource",
                    "resource": "originstweaks:arthropod_appearance_on_ground_resource",
                    "comparison": "=",
                    "compare_to": 1
                }
            ]
        }
    },
    "block_collision_reset": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "originstweaks:arthropod_appearance_on_ground_resource",
            "change": 1,
            "operation": "add"
        },
        "interval": 1,
        "condition": {
            "type": "origins:block_collision",
            "offset_x": 0,
            "offset_y": 0,
            "offset_z": 0
        }
    },
    "fall_damage_decrease": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:name",
            "name": "fall"
        },
        "modifiers": {
            "name": "half fall damage",
            "operation": "multiply_total",
            "value": -0.5
        }
    },
    "on_ground_resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    }
}
{
    "type": "origins:multiple",
    "name": "Seventh Sense",
    "description": "You are able to sense prey in a short distance.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Press %s to activate this Power."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "You inflict Glowing to Huntable Entities in a radius of 16 Blocks for 10 Seconds."
        }
    ],
    "active_power": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": 30,
            "operation": "set"
        },
        "cooldown": 600,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
            "bar_index": 7
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "glow": {
        "type": "origins:entity_glow",
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:actor_condition",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_resource",
                        "comparison": ">",
                        "compare_to": 0
                    }
                },
                {
                    "type": "origins:distance",
                    "compare_to": 16,
                    "comparison": "<="
                },
                {
                    "type": "origins:target_condition",
                    "condition": {
                        "type": "origins:in_tag",
                        "tag": "originstweaks:feline_prey"
                    }
                }
            ]
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 30,
        "hud_render": {
            "should_render": false
        }
    },
    "countdown": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": -1
        },
        "interval": 20
    }
}
{
    "name": "Body Moisture",
    "description": "Your body can store moisture for up to 10 minutes; and only 5 minutes in the nether! When expired, you will begin to lose oxygen.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": "Remember to periodically enter or drink water to stay wet! Submerge in water, sit in a cauldron or drink a bottle of water to manage your moisture."
        }
    ],
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 600,
        "start_value": 600,
        "hud_render": {
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 15,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_resource",
                "compare_to": 600,
                "comparison": "!="
            }
        }
    },
    "water_or_cauldron": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "operation": "add",
            "change": 15
        },
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:water"
                },
                {
                    "type": "origins:in_block",
                    "block_condition": {
                        "type": "origins:block",
                        "block": "minecraft:water_cauldron"
                    }
                }
            ]
        }
    },
    "potion": {
        "type": "origins:action_on_item_use",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": 60,
            "operation": "add"
        },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:potion"
            }
        }
    },
    "ticking": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "operation": "add",
            "change": -1
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:submerged_in",
                            "fluid": "minecraft:water",
                            "inverted": true
                        },
                        {
                            "type": "origins:in_block",
                            "block_condition": {
                                "type": "origins:block",
                                "block": "minecraft:water_cauldron"
                            },
                            "inverted": true
                        }
                    ]
                },
                {
                    "type": "origins:dimension",
                    "dimension": "minecraft:the_nether",
                    "inverted": true
                }
            ]
        }
    },
    "ticking_nether": {
        "type": "origins:action_over_time",
        "interval": 10,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "operation": "add",
            "change": -1
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:submerged_in",
                            "fluid": "minecraft:water",
                            "inverted": true
                        },
                        {
                            "type": "origins:in_block",
                            "block_condition": {
                                "type": "origins:block",
                                "block": "minecraft:water_cauldron"
                            },
                            "inverted": true
                        }
                    ]
                },
                {
                    "type": "origins:dimension",
                    "dimension": "minecraft:the_nether"
                }
            ]
        }
    },
    "grant_waterbreathing": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:apply_effect",
            "effect": {
                "show_icon": false,
                "show_particles": false,
                "effect": "minecraft:water_breathing",
                "duration": -1
            }
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "compare_to": 0,
            "comparison": "!="
        }
    },
    "revoke_waterbreathing": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:clear_effect",
            "effect": "minecraft:water_breathing"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "compare_to": 0,
            "comparison": "=="
        }
    },
    "remove": {
        "type": "origins:action_on_callback",
        "entity_action_lost": {
            "type": "origins:clear_effect",
            "effect": "minecraft:water_breathing"
        }
    }
}
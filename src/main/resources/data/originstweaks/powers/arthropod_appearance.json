{
    "type": "origins:multiple",
    "name": "Arthopod Appearance",
    "description": "Your body resembles that of Arthopods, making you shorter and able to feather off your fall.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "You are 1.5 Blocks tall."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": "You only take falldamage after a fall of more than 30 Blocks."
        }
    ],
    "scale": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:delay",
            "ticks": 3,
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "scale delay set 0"
                    },
                    {
                        "type": "origins:delay",
                        "ticks": 1,
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:execute_command",
                                    "command": "scale set pehkui:height 0.66"
                                },
                                {
                                    "type": "origins:execute_command",
                                    "command": "scale set pehkui:width 0.66"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "scale reset @s"
        }
    },
    "falldmg_cancel": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:name",
                    "name": "fall"
                },
                {
                    "type": "origins:amount",
                    "comparison": "<=",
                    "compare_to": 30
                }
            ]
        },
        "modifier": {
            "operation": "set_total",
            "value": 0
        }
    },
    "falldmg_reset": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:name",
                    "name": "fall"
                },
                {
                    "type": "origins:amount",
                    "comparison": ">",
                    "compare_to": 30
                }
            ]
        },
        "modifier": {
            "operation": "add_total_late",
            "value": -30
        }
    }
}
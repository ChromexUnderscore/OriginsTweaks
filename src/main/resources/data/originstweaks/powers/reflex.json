{
    "type": "origins:multiple",
    "name": "Reflex",
    "description": "You dodge any Arrow automatically without taking damage on a 10 Second Cooldown.",
    "cancel_arrow_damage": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:name",
            "name": "arrow"
        },
        "modifier": {
            "name": "less arrow damage",
            "operation": "addition",
            "value": -20
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown_resource",
            "comparison": "==",
            "compare_to": 200
        }
    },
    "dodge_projectile": {
        "type": "origins:action_when_hit",
        "damage_condition": {
            "type": "origins:name",
            "name": "arrow"
        },
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "spreadplayers ~ ~ 8 16 false @s"
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:entity.enderman.teleport player @a ~ ~ ~ 1 1"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_cooldown_resource",
                        "change": 0,
                        "operation": "set"
                    }
                ]
            }
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown_resource",
            "comparison": "==",
            "compare_to": 200
        }
    },
    "cooldown_resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "start_value": 200,
        "hud_render": {
            "should_render": true
        }
    },
    "regen_cooldown": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cooldown_resource",
            "change": 5,
            "operation": "add"
        },
        "interval": 5,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown_resource",
            "comparison": "!=",
            "compare_to": 200
        }
    }
}
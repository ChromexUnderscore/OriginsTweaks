{
    "type": "origins:multiple",
    "name": "Spectral Wail",
    "description": "You are able to release a Wail that reveals other Entites nearby.",
    "badges": [
        {
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Press your Secondary Power Key to activate this Power."
        },
        {
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "You inflict Glowing to Entities in a radius of 32 Blocks for 30 Seconds."
        }
    ],
    "active_power": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": 30,
            "operation": "set"
        },
        "cooldown": 600,
        "hud_render": {
            "hud_render": {
                "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
                "bar_index": 0
            }
        },
        "key": {
            "key": "key.origins.secondary_active"
        }
    },
    "glow": {
        "type": "origins:entity_glow",
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:actor_condition",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_resource",
                        "comparison": ">",
                        "compare_to": 0
                    }
                },
                {
                    "type": "origins:distance",
                    "compare_to": 32,
                    "comparison": "<="
                }
            ]
        }
    },
    "effects": {
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:flash ~ ~0.7 ~ 0.5 0.5 0.5 0 3"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound entity.phantom.ambient player @a ~ ~ ~ 5 0.5"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound block.bell.resonate player @s ~ ~ ~ 1 1"
                }
            ]
        },
        "interval": 20,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "comparison": "!=",
            "compare_to": 0
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 30,
        "hud_render": {
            "should_render": false
        }
    },
    "countdown": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": -1
        },
        "interval": 20
    }
}
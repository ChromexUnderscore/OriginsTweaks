{
    "type": "origins:multiple",
    "name": "Blazing Touch",
    "description": "You can light your hands on fire, which is useful for other abilities.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": "Set your hands ablaze using %s."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": "When your hands are empty but on fire you can set your Friends and Foes in Flames. This is stronger if you Revved up."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "This is also useful to Light Campfires or Fuel Furnei and Brewing Stands."
        }
    ],
    "fire_hands_active": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.secondary_active"
        }
    },
    "fire_hands_resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 15,
            "condition": {
                "type": "origins:power_active",
                "power": "*:*_fire_hands_active"
            }
        }
    },
    "fire_aspect": {
        "type": "origins:target_action_on_hit",
        "entity_action": {
            "type": "origins:set_on_fire",
            "duration": 8
        },
        "cooldown": 200,
        "hud_render": {
            "should_render": false
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:empty"
                    }
                },
                {
                    "type": "origins:power_active",
                    "power": "*:*_fire_hands_active"
                }
            ]
        }
    },
    "revved_fire_aspect": {
        "type": "origins:action_on_hit",
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "*:revved_up_resource",
                        "change": -16,
                        "operation": "add"
                    }
                },
                {
                    "type": "origins:target_action",
                    "action": {
                        "type": "origins:set_on_fire",
                        "duration": 16
                    }
                }
            ]
        },
        "cooldown": 0,
        "hud_render": {
            "should_render": false
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "*:*_fire_hands_active"
                },
                {
                    "type": "origins:resource",
                    "resource": "*:revved_up_resource",
                    "comparison": "!=",
                    "compare_to": 0
                },
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:empty"
                    }
                }
            ]
        }
    },
    "light_campfires": {
        "type": "origins:action_on_block_use",
        "block_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:modify_block_state",
                    "property": "lit",
                    "value": true
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:flame ~ ~ ~ 0.25 0.25 0.25 0.01 25"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:item.firecharge.use ambient @a ~ ~ ~ 1 0.5"
                }
            ]
        },
        "block_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:in_tag",
                    "tag": "minecraft:campfires"
                },
                {
                    "type": "origins:block_state",
                    "property": "lit",
                    "value": false
                }
            ]
        },
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_fire_hands_active"
        }
    },
